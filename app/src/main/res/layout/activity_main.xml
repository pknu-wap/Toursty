<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/busan_main"
            android:scaleType="fitXY"
            android:layout_marginBottom="10dp"/>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_su"
                style="@style/image_view_style"
                android:src="@drawable/seoul_icon_2"/>

            <ImageView
                android:id="@+id/main_gg"
                style="@style/image_view_style"
                android:src="@drawable/gg_icon"/>

            <ImageView
                android:id="@+id/main_ic"
                style="@style/image_view_style"
                android:src="@drawable/incheon_icon"/>

            <ImageView
                android:id="@+id/main_gw"
                style="@style/image_view_style"
                android:src="@drawable/gangwon_icon"/>

            <ImageView
                android:id="@+id/dj"
                style="@style/image_view_style"
                android:src="@drawable/dj_icon"/>

            <ImageView
                android:id="@+id/cn"
                style="@style/image_view_style"
                android:src="@drawable/cn_icon"/>

            <ImageView
                android:id="@+id/cb"
                style="@style/image_view_style"
                android:src="@drawable/cb_icon"/>

            <ImageView
                android:id="@+id/gj"
                style="@style/image_view_style"
                android:src="@drawable/gj_icon"/>

            <ImageView
                android:id="@+id/jn"
                style="@style/image_view_style"
                android:src="@drawable/jn_icon"/>

            <ImageView
                android:id="@+id/jb"
                style="@style/image_view_style"
                android:src="@drawable/jb_icon"/>

            <ImageView
                android:id="@+id/dg"
                style="@style/image_view_style"
                android:src="@drawable/dg_icon"/>

            <ImageView
                android:id="@+id/gb"
                style="@style/image_view_style"
                android:src="@drawable/gb_icon"/>

            <ImageView
                android:id="@+id/gn"
                style="@style/image_view_style"
                android:src="@drawable/gn_icon"/>

            <ImageView
                android:id="@+id/us"
                style="@style/image_view_style"
                android:src="@drawable/us_icon"/>

            <ImageView
                android:id="@+id/bs"
                style="@style/image_view_style"
                android:src="@drawable/bs_icon"/>

            <ImageView
                android:id="@+id/jj"
                style="@style/image_view_style"
                android:src="@drawable/jj_icon"/>
            
        </LinearLayout>

       </ScrollView>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>